@model UserRegistration

@{
    ViewData["Title"] = "Регистрация";
}

<form method="post" asp-controller="Login" asp-action="Register">
    <div class="container">
        <div class="was-validated" asp-validation-summary="All"></div>
        <h3 class="display-5 text-center">Регистрация</h3>
        <p></p>
        <div class="form-group col-md-3 mx-auto">
            <label asp-for="Login" class="text-center">Логин</label>
            <input type="text" class="form-control" id="Input1" placeholder="Логин" required="" name="Login" asp-for="Login"/>
            <span asp-validation-for="Login"></span>
        </div>
        <p></p>
        <div class="form-group  col-md-3 mx-auto">
            <label asp-for="Password" class="text-center">Пароль</label>
            <input type="password" class="form-control" id="Input2" placeholder="Пароль" required="" name="Password" asp-for="Password"/>
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group  col-md-3 mx-auto">
            <label asp-for="PasswordConfirm" class="text-center">Повтор пароля</label>
            <input type="password" class="form-control" id="lInput3" placeholder="Подтвердите пароль" required="" name="PasswordConfirm" asp-for="PasswordConfirm"/>
            <span asp-validation-for="PasswordConfirm"></span>
        </div>
        <p></p>
        <div class="col-md-3 mx-auto">
            <button type="submit" class="btn btn-outline-dark text-center" asp-controller="Login" asp-action="Register">Зарегестрироваться</button>
        </div>
    </div>
</form>






